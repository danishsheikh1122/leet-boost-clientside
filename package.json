{
  "name": "leet-boost",
  "displayName": "Leet boost",
  "version": "0.0.1",
  "description": "yet to think",
  "author": "Danish",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@clerk/chrome-extension": "^2.1.11",
    "@clerk/clerk-react": "^5.21.2",
    "@clerk/nextjs": "^6.9.9",
    "@excalidraw/excalidraw": "^0.17.6",
    "@mantine/core": "^7.15.3",
    "@mantine/hooks": "^7.15.3",
    "@plasmohq/messaging": "^0.6.2",
    "@plasmohq/storage": "^1.13.0",
    "@radix-ui/react-switch": "^1.1.2",
    "@shadcn/ui": "^0.0.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^11.1.0",
    "firebase-tools": "^13.29.1",
    "framer-motion": "^11.18.1",
    "konva": "^9.3.18",
    "lucide-react": "^0.471.0",
    "plasmo": "0.89.4",
    "react": "18.2.0",
    "react-color": "^2.19.3",
    "react-dom": "18.2.0",
    "react-konva": "^19.0.2",
    "react-sketch-canvas": "^6.2.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@plasmohq/parcel-resolver": "^0.14.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.1.0",
    "prettier": "3.2.4",
    "tailwindcss": "^3.0.0",
    "typescript": "5.3.3"
  },
  "manifest": {
    "action": {
      "default_title": "Click to open sidepanel"
    },
    "host_permissions": [
      "https://*/*",
      "https://leetcode.com/*",
      "http://localhost/*",
      "$CLERK_FRONTEND_API/*",
      "https://daleseo-bigocalc.web.val.run/*"
    ],
    "permissions": [
      "tabs",
      "sidePanel",
      "cookies",
      "storage",
      "scripting",
      "activeTab",
      "tabs"
    ],
    "oauth2": {
      "client_id": "$PLASMO_PUBLIC_FIREBASE_CLIENT_ID",
      "scopes": [
        "https://www.googleapis.com/auth/userinfo.email",
        "https://www.googleapis.com/auth/userinfo.profile"
      ]
    },
    "key": "$CRX_PUBLIC_KEY",
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y"
        },
        "description": "Open the side panel"
      },
      "open_sidepanel": {
        "suggested_key": {
          "default": "Ctrl+Shift+S",
          "mac": "Command+Shift+S"
        },
        "description": "Open the side panel"
      }
    }
  },
  "content_security_policy": {
    "extension_pages": {
      "script-src": "'self' https://apis.google.com https://www.gstatic.com 'unsafe-eval' 'unsafe-inline'",
      "style-src": "'self' 'unsafe-inline'",
      "connect-src": "'self' https://*.firebaseio.com https://apis.google.com https://www.gstatic.com",
      "frame-src": "https://accounts.google.com"
    }
  }
}
